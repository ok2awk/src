@include "oklib"
@include "rx"

function _xtiles(f) {
	_xtiles1(f,0)
	print("")
	_xtiles1(f,1)
}
function _xtiles1(f,fours,       pre,k,r,r0,rxs,lst) {
	r0     = 100
	pre[1] = 0.1
	pre[2] = 10
	pre[3] = 1
	pre[4] = 10
	for(k in pre) {
		haves(rxs, k, "Rx", "rx" k,fours)
		r=r0
		empty(lst)
		while(r-- > 0)
			push(lst, k+rand()^pre[k])
		Rx1(rxs[k], lst)
	}
  rxsShow(rxs)
}
BEGIN {
  tests("_xtiles")
}

