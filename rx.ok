@include "oklib"

function Rx(i,all,txt,n,w,
							m,q,k) {
  i.txt   = either(txt, "rx" int(1000*rand()))
	i.width = either(w,50) 
	i.n     = either(n,5)
	i.report= ""
	has(i, "slots")
	for(k=1; k<=i.width; k++)
		i.slots[k] = " "
	has(i, "data")
	copy(all, i.data)
	m   = asort(i.data)
	i.lo= i.data[0]
	i.hi= i.data[m]
	q   = int(m/i.n)
	has(i, "tiles")
	for(k=1; k<=i.n; k++)
		i.tiles[k] = i.data[k*q] 
	i.tiles[k+1] = i.hi
	i.tiles[0]   = i.lo
}
