}
function RxReport(i,lo,hi,   k) {
	lo = either(lo, i.lo)
	hi = either(hi, i.hi)
  if (i.n == 5) { 
		RxMark(i,1,2,lo,hi,"-")
		RxMark(i,4,5,lo,hi,"-") 
	} else 
		RxMark(i,1,3,lo,hi,"-");
  i.slots[ int(i.width/2) ] = "*"	  
	for(k=1; k<=i.width; k++) 
		i.report = i.report i.slots[k]
	i.report = "|" i.report "|"
	return i.report
}
function RxMark(i,x,y,lo,hi,q) {
	x= i.tiles[x]
	y= i.tiles[y]
	x= int(i.width*(x-lo)/(hi - lo + 1e-32))
	y= int(i.width*(y-lo)/(hi - lo + 1e-32))
  while(x <= y)
		i.slots[x++] = q
}
